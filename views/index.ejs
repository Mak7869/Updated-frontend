<% layout('layouts/boilerplate') -%>

<style>
  .text-gradient {
    background: linear-gradient(to right, #8b5cf6, #f97316, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .counter-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .counter-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .feature-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
  }
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .step-card {
    width: 80px;
    height: 80px;
    line-height: 80px;
    font-size: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .step-card:hover {
    transform: scale(1.1);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-purple {
    background-color: #8b5cf6;
    color: white;
  }
  .btn-orange {
    background-color: #f97316;
    color: white;
  }
  .btn-blue {
    background-color: #3b82f6;
    color: white;
  }

  body.dark {
    background-color: #121212;
    color: #e0e0e0;
  }
  body.dark .bg-light,
  body.dark .bg-white {
    background-color: #1f1f1f;
    color: #e0e0e0;
  }
  body.dark .counter-card,
  body.dark .feature-card,
  body.dark .step-card {
    background-color: #2d2d2d;
    color: #e0e0e0;
  }
  body.dark .modal-content {
    background-color: #1f1f1f;
    color: #e0e0e0;
  }
</style>
<body class="bg-light text-dark" id="body">
  <!-- Dark Mode Toggle -->
  <button
    id="theme-toggle"
    class="btn btn-light position-fixed top-0 end-0 m-3 rounded-circle shadow"
    onclick="toggleTheme()"
  >
    <i class="fas fa-moon" id="theme-icon"></i>
  </button>

  <!-- Hero Section -->
  <section
    class="min-vh-100 d-flex flex-column align-items-center justify-content-center text-center p-5"
  >
    <div class="container">
      <h1 class="display-2 fw-bold mb-4 animate__animated animate__fadeInDown">
        Event Management<br />
        <span class="text-gradient">Effortless & Stunning</span>
      </h1>
      <p class="lead mb-5 animate__animated animate__fadeInUp">
        Track, manage, and organize events, attendees, and venues in one
        beautifully designed dashboard.
      </p>
      <a
        href="/events"
        class="btn btn-primary btn-lg animate__animated animate__pulse"
        >Explore Events ðŸš€</a
      >

      <!-- Counters -->
      <div class="row mt-5 justify-content-center">
        <div class="col-md-4 mb-4">
          <div class="counter-card p-4 rounded shadow-sm bg-white">
            <div class="counter-value display-4 text-primary" id="event-count">
              0
            </div>
            <p class="mb-0">Events Managed</p>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="counter-card p-4 rounded shadow-sm bg-white">
            <div
              class="counter-value display-4 text-orange"
              id="attendee-count"
            >
              0
            </div>
            <p class="mb-0">Attendees</p>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="counter-card p-4 rounded shadow-sm bg-white">
            <div class="counter-value display-4 text-info" id="venue-count">
              0
            </div>
            <p class="mb-0">Venues</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-5 bg-white">
    <div class="container">
      <h2 class="text-center display-4 fw-bold mb-5">Core Features</h2>
      <div class="row g-4">
        <div class="col-lg-4 col-md-6">
          <div
            class="feature-card p-4 rounded shadow-sm bg-gradient-to-br from-purple-100 to-orange-50"
            onclick="showFeatureModal('Event Management')"
          >
            <i class="fa-regular fa-calendar display-2 text-purple mb-3"></i>
            <h3 class="h4 fw-bold">Event Management</h3>
            <p>
              Create, edit, and track all your events in a single, elegant
              dashboard.
            </p>
            <button class="btn btn-purple mt-2">Learn More</button>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div
            class="feature-card p-4 rounded shadow-sm bg-gradient-to-br from-orange-100 to-blue-50"
            onclick="showFeatureModal('Attendee Management')"
          >
            <i class="fa-solid fa-users display-2 text-orange mb-3"></i>
            <h3 class="h4 fw-bold">Attendee Management</h3>
            <p>
              Track registrations, manage participants, and keep everything
              organized efficiently.
            </p>
            <button class="btn btn-orange mt-2">Learn More</button>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div
            class="feature-card p-4 rounded shadow-sm bg-gradient-to-br from-blue-100 to-purple-50"
            onclick="showFeatureModal('Venue Scheduling')"
          >
            <i class="fa-solid fa-location-dot display-2 text-blue mb-3"></i>
            <h3 class="h4 fw-bold">Venue Scheduling</h3>
            <p>
              Assign and schedule venues for your events seamlessly with style.
            </p>
            <button class="btn btn-blue mt-2">Learn More</button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center display-4 fw-bold mb-5">How It Works</h2>
      <div class="row text-center">
        <div class="col-md-4 mb-4">
          <div
            class="step-card p-4 rounded-circle bg-purple text-white mx-auto mb-3"
            id="step-1"
            onclick="highlightStep(1)"
          >
            1
          </div>
          <h3 class="h4">Create Event</h3>
          <p>Fill in details to set up your event in seconds.</p>
        </div>
        <div class="col-md-4 mb-4">
          <div
            class="step-card p-4 rounded-circle bg-orange text-white mx-auto mb-3"
            id="step-2"
            onclick="highlightStep(2)"
          >
            2
          </div>
          <h3 class="h4">Add Attendees</h3>
          <p>Manage participants and registrations smoothly.</p>
        </div>
        <div class="col-md-4 mb-4">
          <div
            class="step-card p-4 rounded-circle bg-blue text-white mx-auto mb-3"
            id="step-3"
            onclick="highlightStep(3)"
          >
            3
          </div>
          <h3 class="h4">Assign Venues</h3>
          <p>Schedule the right venue and ensure a smooth event.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-5 text-center bg-white">
    <div class="container">
      <h2 class="display-4 fw-bold mb-4">Ready to Simplify Your Events?</h2>
      <p class="lead mb-5">
        Get started now and experience effortless event management with a sleek,
        vibrant dashboard.
      </p>
      <a href="/events" class="btn btn-primary btn-lg">Start Now ðŸš€</a>
    </div>
  </section>

  <!-- Feature Modal -->
  <div class="modal fade" id="feature-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-title"></h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body" id="modal-description"></div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="script.js"></script>

  <script>
    function toggleTheme() {
      const body = document.getElementById("body");
      const icon = document.getElementById("theme-icon");
      body.classList.toggle("dark");
      icon.classList.toggle("fa-moon");
      icon.classList.toggle("fa-sun");
    }

    function animateCounter(id, target) {
      let count = 0;
      const el = document.getElementById(id);
      const interval = setInterval(() => {
        if (count < target) {
          count++;
          el.textContent = count;
        } else clearInterval(interval);
      }, 30);
    }

    window.onload = () => {
      animateCounter("event-count", 150);
      animateCounter("attendee-count", 2500);
      animateCounter("venue-count", 50);
    };

    function showFeatureModal(feature) {
      const modal = new bootstrap.Modal(
        document.getElementById("feature-modal")
      );
      document.getElementById("modal-title").textContent = feature;
      document.getElementById(
        "modal-description"
      ).textContent = `Detailed info about ${feature}. Manage everything effortlessly with advanced tools.`;
      modal.show();
    }

    function highlightStep(step) {
      const steps = document.querySelectorAll('[id^="step-"]');
      steps.forEach((s) => s.classList.remove("ring", "ring-purple"));
      document
        .getElementById(`step-${step}`)
        .classList.add("ring", "ring-purple");
    }
  </script>
</body>
